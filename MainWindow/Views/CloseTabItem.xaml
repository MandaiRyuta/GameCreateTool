<UserControl x:Class="ZuneLikeWindow.CloseTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZuneLikeWindow"
             mc:Ignorable="d">
    <Border Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderThickness="3" CornerRadius="2,2,2,2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <StackPanel Orientation="Horizontal" x:Name="Inner">
            <Image x:Name="SelfImg" Width="16" Height="16" Margin="3, 0"></Image>
            <TextBlock x:Name="TabText" Text="Error" Width="auto" Height="16" HorizontalAlignment="Left" Margin="3,5"  FontFamily="Meiryo UI"/>
            <Button Content="×" Click="RemoveTab" HorizontalAlignment="Right" VerticalAlignment="Center" Width="16" Height="16" Margin="3,0" FontFamily="Meiryo UI" FontSize="8"/>
        </StackPanel>
    </Border>
</UserControl>
